<div class="row">
  	<div class="col-md-12 col-sm-12">
		<div class="well">
		    <div class="media">
		      	<div class="media-body">
		    		<h4 class="media-heading">{{ entrada.titulo }}</h4>
					<ul class="list-inline list-unstyled">
			  			<li>
			  				<span><i class="glyphicon glyphicon-calendar"></i> 21 de Abril del 2016</span>
			  			</li>
			            <li>|</li>
			            	<span><i class="glyphicon glyphicon-comment"></i> 2 Respuesta/s</span>
			            <li>|</li>
			            <li>
			               	<span class="glyphicon glyphicon-star"></span>
	                        <span class="glyphicon glyphicon-star"></span>
	                        <span class="glyphicon glyphicon-star"></span>
	                        <span class="glyphicon glyphicon-star"></span>
	                        <span class="glyphicon glyphicon-star-empty"></span>
			            </li>
			            <li>|</li>
			            <li>
			            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
			              <span><i class="fa fa-facebook-square"></i></span>
			              <span><i class="fa fa-twitter-square"></i></span>
			              <span><i class="fa fa-google-plus-square"></i></span>
			            </li>
					</ul>
					</br>

					{# RESPUESTAS DE LA ENTRADA DEL FORO #}
					{% for respuesta in entrada.respuestas %}
		    		<div class="row">
					  	<div class="col-md-12 col-sm-12">
							
					  		<div id="accordion" class="panel-group" aria-multiselectable="true" role="tablist">
								<div class="panel panel-default">
								    <div class="panel-heading" role="tab" id="headingOne">
								    	<h4 class="panel-title">
								        	<a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ respuesta.id }}" aria-expanded="false" aria-controls="collapse{{ respuesta.id }}"> {{ respuesta.miembro }} Respuesta De Eddard Stark</a>
								      	</h4>
								      	<ul class="list-inline list-unstyled">
								  			<li>
								  				<span><i class="glyphicon glyphicon-calendar"></i> 22 de Abril del 2016</span>
								  			</li>
								            <li>|</li>
								            <li>
								               	<span class="glyphicon glyphicon-star"></span>
						                        <span class="glyphicon glyphicon-star"></span>
						                        <span class="glyphicon glyphicon-star"></span>
						                        <span class="glyphicon glyphicon-star"></span>
						                        <span class="glyphicon glyphicon-star-empty"></span>
								            </li>
								            <li>|</li>
								            <li>
								            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
								              <span><i class="fa fa-facebook-square"></i></span>
								              <span><i class="fa fa-twitter-square"></i></span>
								              <span><i class="fa fa-google-plus-square"></i></span>
								            </li>
										</ul>
								    </div>
								    <div id="collapse{{ respuesta.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
								    	<div class="panel-body">
								    		<p>{{ respuesta.contenido }}</p> 
								    	</div>
								    </div>
								</div>
							</div>

						</div>
					</div> 
					{% endfor %}
					{# FIN DE RESPUESTAS DE LA ENTRADA DEL FORO #}   

		          	{# PANEL PUBLICA NUEVA RESPUESTA #}
		          	<div id="accordionRespuesta" class="panel-group" aria-multiselectable="true" role="tablist">
						<a class="collapsed btn btn-info" role="button" data-toggle="collapse" data-parent="#accordionRespuesta" href="#collapseResponse" aria-expanded="false" aria-controls="collapseResponse"> Nueva Respuesta</a>
						<div id="collapseResponse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
						    <div class="panel panel-default">
						    	<div class="panel-body">
						    		<h4>Nueva Respuesta de Fulanito</h4>
						    		<p>aca va el textarea con tiny editor o simple</p>
						    	</div>
						    	<button class="btn btn-success pull-right" type="button">Publicar</button>
						    </div>
						</div>
					</div>

		       	</div>
		    </div>
		</div>
	</div>
</div>

{% block javascripts -%}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#accordion').click(function (e) {
			  e.preventDefault()
			  $(this).tab('show')
			})
			$('#accordionRespuesta').click(function (e) {
			  e.preventDefault()
			  $(this).tab('show')
			})
        });
    </script>
{% endblock %}