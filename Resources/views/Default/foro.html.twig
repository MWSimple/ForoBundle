{# TODOS LOS GRUPOS FORO #}
	<h4 class="media-heading">{{ foro.nombre }}</h4>
	<ul class="list-inline list-unstyled">
		<li>
			<span><i class="glyphicon glyphicon-calendar"></i> 20 de Abril del 2016</span>
		</li>
		<li>|</li>
			<span><i class="glyphicon glyphicon-tags"></i> {{ foro.entradas|length }} Entrada/s</span>
	    <li>|</li>
	    <li>
	       	<span class="glyphicon glyphicon-star"></span>
	        <span class="glyphicon glyphicon-star"></span>
	        <span class="glyphicon glyphicon-star"></span>
	        <span class="glyphicon glyphicon-star"></span>
	        <span class="glyphicon glyphicon-star-empty"></span>
	    </li>
	    <li>|</li>
	    <li>
	    <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
	      <span><i class="fa fa-facebook-square"></i></span>
	      <span><i class="fa fa-twitter-square"></i></span>
	      <span><i class="fa fa-google-plus-square"></i></span>
	    </li>
	</ul>

	{# LISTA TODAS LAS ENTRADAS DEL GRUPO #}
	{% for entrada in foro.entradas %}
		<div class="panel panel-default">
		    <div class="panel-heading" role="tab" id="headingOne">
		    	<h4 class="panel-title">
		        	<span class="glyphicon glyphicon-tags"></span><a class="getEntrada" role="button" type="button" data-id="{{ entrada.id }}"> {{ entrada.titulo }}</a>
		      	</h4>
		    </div>
		</div>
	{% endfor %}

	<div id="entrada"></div>
	{# FIN TODOS LOS FOROS #}

	{% if is_granted('ROLE_ADMIN') %}
			{# PANEL PUBLICA NUEVA RESPUESTA #}
	      	<div id="accordionRespuesta" class="panel-group" aria-multiselectable="true" role="tablist">
				<a class="collapsed btn btn-info" role="button" data-toggle="collapse" data-parent="#accordionRespuesta" href="#collapseResponse" aria-expanded="false" aria-controls="collapseResponse"> Nueva Entrada</a>
				<div id="collapseResponse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
				    {{ render(controller('MWSimpleForoBundle:Entrada:new')) }}
				</div>
			</div>

	{% endif %}	

{% block javascripts -%}
    <script type="text/javascript">
        $(document).ready(function () {
        	
        	$(".getEntrada").click(function (e) {

                var entradaId = $(this).data('id');
                var url = Routing.generate('traer_entrada', { id: entradaId });
                $.ajax({
                    type: "GET",
                    url: url,
                    success: function(response) {
                       $('#entrada').html(response);
                    }
                });

            })

            $('#accordionRespuesta').click(function (e) {
			  e.preventDefault()
			  $(this).tab('show')
			})

        });
    </script>

{% endblock %}

