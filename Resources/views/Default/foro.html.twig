    <script type="text/javascript">
        $(document).ready(function () {
        	
        	$(".getEntrada").click(function (e) {

                var entradaId = $(this).data('id');
                var url = Routing.generate('traer_entrada', { id: entradaId });
                $.ajax({
                    type: "GET",
                    url: url,
                    success: function(response) {
                       $('#entrada').html(response);
                    }
                });

            })

            $('#accordionRespuesta').click(function (e) {
			  e.preventDefault()
			  $(this).tab('show')
			})

			$('#entradaModal').on('shown.bs.modal', function () {
			  $('#myInput').focus()
			})

        });
    </script>

